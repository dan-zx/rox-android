<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/drawer_item_padding"
                android:paddingLeft="@dimen/drawer_item_vertical_padding"
                android:paddingRight="@dimen/drawer_item_vertical_padding"
                android:paddingTop="@dimen/drawer_item_padding">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:paddingRight="24dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/icon"
        android:layout_toRightOf="@id/icon"
        android:fontFamily="sans-serif"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/drawer_item_text"/>
</RelativeLayout>